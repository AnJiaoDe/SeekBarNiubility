<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变进度" />

    <com.cy.seekbarniubility.SeekBarCache
        android:id="@+id/cacheSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />


    <com.cy.seekbarniubility.SeekBarSimple
        android:id="@+id/cySeekBar1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        app:color_indicator="#f00"
        app:color_second="#454545"
        app:height_bar="10dp"
        app:radius_bar="6dp"
        app:radius_indicator_normal="10dp"
        app:radius_indicator_touch="20dp" />

    <com.cy.seekbarniubility.SeekBarSimple
        android:id="@+id/cySeekBar"
        android:layout_width="match_parent"
        app:radius_bar="1dp"
        app:radius_indicator_normal="4dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />
</LinearLayout>